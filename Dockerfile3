# Use OpenJDK 11 slim image as the base
FROM openjdk:11-jre-slim

# Install dependencies, Maven, and AWS CLI (using AWS CLI v2)
RUN apt-get update && \
    apt-get install -y \
    curl \
    unzip \
    maven \
    && rm -rf /var/lib/apt/lists/*  # Clean up to reduce image size

# Install AWS CLI v2
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" && \
    unzip awscliv2.zip && \
    ./aws/install && \
    rm -rf awscliv2.zip

# Set AWS environment variables for authentication (can be passed at build time or set in CI/CD)
ARG AWS_ACCESS_KEY_ID
ARG AWS_SECRET_ACCESS_KEY
ARG AWS_DEFAULT_REGION
ENV AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
ENV AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
ENV AWS_DEFAULT_REGION=$AWS_DEFAULT_REGION

# Get authentication token for AWS CodeArtifact
RUN aws codeartifact get-authorization-token --domain assyvajrala --domain-owner <account_id> --region us-west-2 --query authorizationToken --output text > /tmp/codeartifact_token.txt

# Configure Maven to use the CodeArtifact repository
RUN mkdir -p /root/.m2 && \
    echo "<settings>" > /root/.m2/settings.xml && \
    echo "  <servers>" >> /root/.m2/settings.xml && \
    echo "    <server>" >> /root/.m2/settings.xml && \
    echo "      <id>codeartifact</id>" >> /root/.m2/settings.xml && \
    echo "      <username>aws</username>" >> /root/.m2/settings.xml && \
    echo "      <password>$(cat /tmp/codeartifact_token.txt)</password>" >> /root/.m2/settings.xml && \
    echo "    </server>" >> /root/.m2/settings.xml && \
    echo "  </servers>" >> /root/.m2/settings.xml && \
    echo "</settings>" >> /root/.m2/settings.xml

# Download the specific artifact from AWS CodeArtifact
RUN mvn dependency:get -DrepoUrl=https://assyvajrala-688567283917.d.codeartifact.us-west-2.amazonaws.com/maven/marvel/ \
    -Dartifact=com.assy.com:cluster_jar:1.0-20250305.103220-1

# Set the working directory in the container
WORKDIR /app

# Copy the JAR file from the Maven repository to the container
RUN cp ~/.m2/repository/com/assy/com/cluster_jar/1.0-20250305.103220-1/cluster_jar-1.0-20250305.103220-1.jar /app/cluster_jar.jar

# Run the JAR file
ENTRYPOINT ["java", "-jar", "cluster_jar.jar"]
